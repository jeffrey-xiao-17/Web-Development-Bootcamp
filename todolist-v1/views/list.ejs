<%- include("header") %> 
<body>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>
  <div class="box">
    <ul>
      <% for (var i = 0; i < newListItems.length; i++) { %> 
        <div class="item">
          <input type="checkbox">
          <p><%= newListItems[i] %></p>
        </div>
      <% } %>
    </ul>

    <form class="item" action="/" method="post">
      <input type="text" name="item" placeholder="New Item" autocomplete="off" required>
      <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
  </div>
</body>
<%- include("footer") %> 